<?xml version="1.0"?>

<!-- Launch the Thing driver. -->
<!-- Currently only launches the UR10 -->
<launch>
  <!-- published by the joint_state_controller -->
  <remap from="/joint_states" to="/mobile_manipulator_joint_states" />

  <!-- subscribed to by the joint_group_vel_controller -->
  <remap from="/joint_group_vel_controller/command" to="/mobile_manipulator_cmd_vel" />

  <rosparam command="load" file="$(find ridgeback_control)/config/control.yaml" />

  <!-- Launch UR10 driver. -->
  <!-- namespace is required to avoid conflict with Ridgeback control topics/services -->
  <include file="$(find ur_robot_driver)/launch/ur10_bringup.launch" ns="ur10">
    <arg name="robot_ip" default="192.168.131.40"/>
    <arg name="kinematics_config" default="$(find mobile_manipulation_central)/config/ur10/calibration.yaml"/>
    <arg name="robot_description_file" value="$(find mobile_manipulation_central)/launch/thing_description.launch" />
    <arg name="controller_config_file" value="$(find mobile_manipulation_central)/config/ur10/controllers.yaml" />
    <arg name="controllers" value="joint_state_controller" />
    <arg name="stopped_controllers" value="scaled_vel_joint_traj_controller joint_group_vel_controller" />
  </include>
</launch>
